#!/usr/bin/env bash

if [[ $PLATFORM == 'macos' ]]; then
  alias ls='ls -G'
  alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'
  alias smerge='/Applications/Sublime\ Merge.app/Contents/SharedSupport/bin/smerge'
  alias f='BROWSER="chrome-cli open" git-open.bash &'
fi

if [[ $PLATFORM == 'linux' ]]; then
  alias ls='ls --color=auto'
  alias f='BROWSER="lynx" git-open.bash &'
  alias sudo='sudo '
fi

# Launch silversearch with default ignore
alias ag='ag --path-to-ignore ~/.ignore'

# Edit shortcuts
alias e-bash="$EDITOR ~/.bash_profile"
alias e-gitconfig="$EDITOR ~/.gitconfig"
alias e-config="$EDITOR ~/.ssh/config"

# doctl shortcuts
alias dosh='doctl compute ssh'
alias dosh-root='doctl compute ssh --ssh-user root'
alias dcd='doctl compute droplet'

# Shortcuts
alias z='git lo'
alias x='git status'
alias c='git commit'
alias C='git aa && git commit'
alias v='git diff'
alias b='git branch -rav'
alias d='cd ~/dotfiles'
alias s='cd ~/dev'
alias a='cd ~'

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# git
alias gc="git clone"
alias gsc="git clone --depth=1" # Git Shallow Clone
alias gsu="git submodule foreach git pull --recurse-submodules origin master" # Git Submodule Update
alias gsi="git submodule init && git submodule update --recursive --jobs=8" # Git submodule init

# gpg
alias gpg-new="gpg --default-new-key-algo rsa4096 --gen-key"
alias gpg-list="gpg --list-secret-keys --keyid-format LONG"
alias gpg-export="gpg --armor --export"

# docker
alias dps="docker ps"
alias dpa="docker ps -a"
alias di="docker images"

# k8s
alias k='kubectl'
